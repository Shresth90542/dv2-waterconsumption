{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Total Water Consumption by State (2003â€“2022)",
    "fontSize": 18,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Shresth90542/dv2-waterconsumption/main/water_consumption.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"calculate": "year(toDate(datum.date))", "as": "Year"},
    {"filter": "datum.state != 'Malaysia'"},
    {
      "aggregate": [{"op": "sum", "field": "value", "as": "Total"}],
      "groupby": ["state", "Year"]
    }
  ],
  "facet": {
    "field": "state",
    "type": "nominal",
    "columns": 4,
    "sort": "ascending",
    "header": {
      "labelFontSize": 14,
      "labelColor": "#111",
      "labelFontWeight": "bold",
      "labelLimit": 140,
      "labelPadding": 6
    },
    "title": null
  },
  "spec": {
    "width": 220,
    "height": 120,
    "layer": [
      {"mark": {"type": "area", "opacity": 0.1, "color": "#2563eb"}},
      {
        "mark": {
          "type": "line",
          "stroke": "#2563eb",
          "strokeWidth": 2,
          "interpolate": "monotone"
        }
      }
    ],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "quantitative",
        "scale": {"domain": [2003, 2022]},
        "axis": {
          "title": null,
          "grid": false,
          "tickCount": 5,
          "labelAngle": 0,
          "labelFontSize": 10
        }
      },
      "y": {
        "field": "Total",
        "type": "quantitative",
        "axis": {
          "title": "MLD",
          "titleFontSize": 10,
          "labelFontSize": 10,
          "grid": true,
          "gridColor": "#f3f4f6",
          "tickCount": 4
        }
      },
      "tooltip": [
        {"field": "state", "title": "State"},
        {"field": "Year", "title": "Year"},
        {"field": "Total", "type": "quantitative", "title": "Consumption (MLD)"}
      ]
    }
  },
  "config": {
    "view": {"stroke": null},
    "axis": {
      "domainColor": "#e5e7eb",
      "tickColor": "#e5e7eb",
      "titleColor": "#111827"
    },
    "background": "white"
  }
}
