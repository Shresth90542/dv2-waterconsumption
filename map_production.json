{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Water Production (MLD) by State",
  "width": 1000,
  "height": 520,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "year",
      "value": 2019,
      "bind": {"input": "range", "min": 2000, "max": 2019, "step": 1}
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Shresth90542/dv2-waterconsumption/refs/heads/main/malaysia.state.geojson",
    "format": {"type": "json"}
  },
  "transform": [
    {
      "calculate": "datum.properties.name || datum.properties.NAME_1 || datum.properties.State || datum.properties.NAME || datum.properties.state",
      "as": "JoinNameRaw"
    },
    {
      "calculate": "JoinNameRaw==='Malacca' ? 'Melaka' : JoinNameRaw==='Penang' ? 'Pulau Pinang' : JoinNameRaw==='Labuan' ? 'W.P. Labuan' : JoinNameRaw",
      "as": "JoinName"
    },
    {
      "lookup": "JoinName",
      "from": {
        "data": {"url": "water_production_2000_2019.csv", "format": {"type": "csv"}},
        "key": "State",
        "fields": ["Year", "Value (Million litres per day)"]
      }
    },
    {"calculate": "toNumber(datum['Value (Million litres per day)'])", "as": "ProdMLD"},
    {"calculate": "toNumber(datum.Year)", "as": "CSVYear"},
    {"filter": "CSVYear == year"}
  ],
  "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.6},
  "encoding": {
    "shape": {"field": "geometry", "type": "geojson"},
    "color": {
      "field": "ProdMLD",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "title": "Production (MLD)"
    },
    "tooltip": [
      {"field": "JoinName", "title": "State"},
      {"field": "CSVYear", "title": "Year"},
      {"field": "ProdMLD", "title": "Production (MLD)", "format": ".0f"}
    ]
  }
}
