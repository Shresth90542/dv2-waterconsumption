{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Domestic Share of Consumption (%) by State",
  "width": 1000,
  "height": 520,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "year",
      "value": 2019,
      "bind": {"input": "range", "min": 2003, "max": 2022, "step": 1}
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/Shresth90542/dv2-waterconsumption/refs/heads/main/malaysia.state.geojson",
    "format": {"type": "json"}
  },
  "transform": [
    {
      "calculate": "datum.properties.name || datum.properties.NAME_1 || datum.properties.State || datum.properties.NAME || datum.properties.state",
      "as": "JoinNameRaw"
    },
    {
      "calculate": "JoinNameRaw==='Malacca' ? 'Melaka' : JoinNameRaw==='Penang' ? 'Pulau Pinang' : JoinNameRaw==='Labuan' ? 'W.P. Labuan' : JoinNameRaw",
      "as": "JoinName"
    },
    {
      "lookup": "JoinName",
      "from": {
        "data": {"url": "water_consumption.csv", "format": {"type": "csv"}},
        "key": "state",
        "fields": ["state", "sector", "date", "value"]
      }
    },
    {"calculate": "year(toDate(datum.date))", "as": "CSVYear"},
    {"filter": "CSVYear == year"},
    {"calculate": "lower(datum.sector)", "as": "sector_lc"},
    {
      "aggregate": [{"op": "sum", "field": "value", "as": "sum_value"}],
      "groupby": ["JoinName", "sector_lc"]
    },
    {
      "pivot": "sector_lc",
      "value": "sum_value",
      "groupby": ["JoinName"]
    },
    {"calculate": "(datum.domestic + datum.nondomestic)", "as": "TotalCons"},
    {"calculate": "datum.TotalCons==0 ? null : datum.domestic/datum.TotalCons*100", "as": "DomesticPct"}
  ],
  "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.6},
  "encoding": {
    "shape": {"field": "geometry", "type": "geojson"},
    "color": {
      "field": "DomesticPct",
      "type": "quantitative",
      "scale": {"scheme": "tealblues"},
      "title": "Domestic share (%)"
    },
    "tooltip": [
      {"field": "JoinName", "title": "State"},
      {"field": "DomesticPct", "title": "Domestic share (%)", "format": ".1f"},
      {"field": "domestic", "title": "Domestic (MLD)", "format": ".0f"},
      {"field": "nondomestic", "title": "Non-domestic (MLD)", "format": ".0f"}
    ]
  }
}
